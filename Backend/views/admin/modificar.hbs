<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="/stylesheets/normalize.css">
<link rel="stylesheet" href="/stylesheets/ortopedia.css"> 

<header>
        <div class="holder">
        <img class="logo" src="/images/perfil-azul.jpg"  alt="Ortopedia San Carlos">
        <h1>Ortopedia San Carlos</h1>
    </div>
    </header>

<div class="container" style="margin:50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la novedad</h4>
             <form method="post" action="/admin/novedades/modificar" enctype="multipart/form-data">  {{!--siempre el multipart sino no procesa las imagenes --}}
            <input type="hidden" value="{{novedad.id}}" name="id">
            <div class="mb-3">
                <input type="text" placeholder="Titulo" value="{{novedad.titulo}}" class="form-control" name="titulo">
            </div>
            <div class="mb-3">
                <textarea placeholder="Subtitulo" class="form-control" name="subtitulo">{{novedad.subtitulo}}</textarea>
            </div>
            <div class="mb-3">
                <textarea placeholder="Cuerpo" class="form-control" name="cuerpo">{{novedad.cuerpo}}</textarea>
            </div>
            <div class="mb-3">
                <p>
                    <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                </p>
                <p>
                    <label><input type="checkbox" name="img_delete" id="img_delete" value="1"> Eliminar imagen actual?</label>
                    <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                </p>
            </div>
            <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div> 